<link rel="stylesheet" href="/css/signup.css">

<body>
    <div class="container-fluid bg-secondary px-0">
        <div class="row g-0">
            <div class="col-lg-6 py-6 px-5">
                <h1 class="display-5 mb-4">Sign Up</h1>
                <form method="post" action="/users/create" >
                    <div class="col g-3 mt-2">
                        <div class="col-6 mt-2">
                            <div class="col-6">
                                <div class="form-floating mt-2">
                                    <input type="text" class="form-control" name="name" id="form-floating-2" placeholder="Fake Name">
                                    <label for="form-floating-1">Name</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mt-2">
                            <div class="form-floating">
                                <input type="email" class="form-control" name="email" id="form-floating-2" placeholder="name@example.com">
                                <label for="form-floating-2">Email address</label>

                            </div>
                        </div>

                        <div class="col-6 mt-2">
                            <div class="form-floating">
                                <input type="password" class="form-control" name="password" id="form-floating-2" placeholder="password">
                                <label for="form-floating-2">Password</label>
                            </div>
                        </div>
                        <div class="col-6 mt-2">
                            <div class="form-floating">
                                <input type="password" class="form-control" name="confirm_password" id="form-floating-2" placeholder="password">
                                <label for="form-floating-2">Confirm Password</label>
                            </div>
                        </div>
                        <div class="col-12 mt-2">
                            <input type="hidden" name="isAdmin" value="false">
                            <button class="btn btn-primary w-35 py-2 mt-2" type="submit">Sign Up</button>
                           
                        </div>
                        <div class="extraStuff">
                            <small> Already User ?</small>
                            <a href="/users/sign-in"> Sign In</a>
                        </div>
                        
                    </div>
                </form>

            </div>
        </div>
    </div>

</body>